<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="curso_website">
            <t t-call='website.layout'>
                <t t-set="title">Academy</t>
                <div class="oe_structure">
                    <div class="container">
                        <h1>Cursos</h1>
                        <t t-foreach="cursos" t-as="curso">
                            <h3>
                                <t t-esc="curso.id"/>
                                <t t-esc="curso.name"/>
                            </h3>
                            <p>Description:
                                <span t-field="curso.description"/>
                            </p>
                            <p>Level:
                                <span t-field="curso.level"/>
                            </p>
                            <strong>Sessions</strong>
                            <t t-foreach="curso.session_ids" t-as="session">
                                <p>
                                    <a t-attf-hred="/academy/{{ slug(session)}}">
                                        <t t-esc="session.name"/>
                                    </a>
                                </p>
                                <p>Last modified:
                                    <i t-field="session.write_date" t-field-option='{"format": "long"}'/>
                                </p>
                            </t>
                            <t t-if="not curso.session_ids">
                                <p>No session Currently</p>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        <template id="session_website">
            <t t-call="website.layout">
                <t t-set="tittle">Session</t>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="session.name"/>
                        <p>Last Modified:
                            <i t-field="session.write_date" t-field-options='{"format": "long"}'/>
                        </p>
                        <p>Curso:
                            <i t-field="session.curso_id.name"/>
                        </p>
                        <h3>Students:</h3>
                        <ul>
                            <t t-foreach="session.student_ids" t-as="student">
                                <li>
                                    <span t-field="student.name"/>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>